<% if flash[:log_errors] %>
<div class="alert alert-danger">
<% flash[:log_errors].each do |error| %>
<h4> <%= error[1][0] unless error[0] == "password" %> </h4>
<h4> <%= error[1][1] if error[0] == "password" %> </h4>
<% end %>
</div>
<% end %>
<% if flash[:log_error] %>
<div class="alert alert-danger">
  <h4><%= flash[:log_error] %></h4>
</div>
<% end %>
<form  action="/users/log_user" method="post">
<div class="form-group">
  <div class="col-md-4">
    <h2>Login</h2>
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      Email:<input class="form-control" type="text" name='email' required> <br>
      Password:<input class="form-control" type="password" name="password" required> <br>
      <input class="btn btn-primary" type="submit" value="Login" class="input-submit"> <br>
  </div>
</div>
</form>
