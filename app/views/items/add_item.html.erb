<form action="/items/create_item" method="post">
  <% if flash[:notice] %>
  <div class="alert alert-success">
      <strong><%= flash[:notice] %></strong>
  </div>
  <%end%>
  <% if flash[:errors] %>
  <div class="alert alert-danger">
      <% flash[:errors].each do |error| %> <br>
      <strong><%= error%></strong>
      <%end%>
  </div>
  <%end%>
  <div class="form-group">
    <h1>Add a item</h1>
    <div class="col-md-4">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <label for="name">Product Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Product Name" >
      <label for="description">Description</label>
      <input type="text" class="form-control" id="description" name="description" placeholder="Description" >
      <label for="">Image URL</label>
      <input type="url" class="form-control" id="img_url" name="img_url" placeholder="http://" >
      <label for="">Price</label>
      <input type="number" class="form-control" id="price" name="price" placeholder="Please enter price" >
      <label for="">Quanity</label>
      <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Please enter quantity" >
      <div class="form-group">
        <label for="Category">Category</label>
        <select class="form-control" id="category" name="category"  >
          <option selected>Choose...</option>
          <%@categories.each do |category|%>
          <option value="<%=category.id%>"><%=category.title%></option>
          <%end%>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Create Product</button>
    </div>
  </div>
</form>
