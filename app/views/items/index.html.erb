<style media="screen">
  .sup {
    margin-top: 14px
  }
  .navbar-header {
    margin-top: 14px
  }
</style>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Woot Reboot</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="sup" class="active"><a href="#">Home</a></li>
      <%@categories.each do |category| %>
      <li class="sup"><a href="/category/show/<%=category.id%>"><%=category.title %></a></li>
      <%end%>
    </ul>
    <ul class="nav navbar-nav">
      <% if !@user %>
      <li class="sup"><a href="/login">Sign In</a></li>
      <% end %>
      <% if @user %>
      <li class="sup"><a href="/logout">Logout</a></li>
      <li class="sup"><a href="/users/edit/<%=@user.id%>">Update Account Settings</a></li>
      <% end %>
      <li><a href="/items/checkout/<%=@cart.id%>"><img src="http://cdn.mysitemyway.com/etc-mysitemyway/icons/legacy-previews/icons/simple-black-square-icons-business/126581-simple-black-square-icon-business-cart-solid.png" alt="" height = '50' width = '50'></a></li>
     </ul>
  </div>
</nav>
<div class="container">
  <h1>Deal of the day!!!</h1>
  <div class="row">
    <div class="col-sm-6 col-centered">
      <img src="<%=@Deal_of_Day.img_url%>" class="img-thumbnail" alt="" width="500" height="400">
    </div>
    <div class="col-sm-6">
      <h1><%=@Deal_of_Day.name%></h1>
      <h2>$<%=@Deal_of_Day.price%></h2> <br>
      <h4><%=@Deal_of_Day.description%></h4>
      <a class="btn btn-warning btn-lg" href="items/show_item/<%=@Deal_of_Day.id%>" role="button">I want one</a>
    </div>
  </div>
</div>

<h4>New Items!</h4>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img class="d-block img-fluid" src="<%=@items.first.img_url%>" alt="First slide" width="250" height="200">
      </div>

      <div class="item">
        <img class="d-block img-fluid" src="<%=@items.second.img_url%>" alt="Second slide" width="250" height="200">
      </div>

      <div class="item">
        <img class="d-block img-fluid" src="<%=@items.third.img_url%>" alt="Third slide" width="250" height="200">
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
